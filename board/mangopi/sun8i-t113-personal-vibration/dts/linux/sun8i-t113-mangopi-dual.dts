&usb_otg {
	dr_mode = "otg";
	status = "okay";
};

&ehci0 {
	status = "okay";
};

&dmic {
	status = "okay";
};

&ehci1 {
	status = "okay";
};


&ohci0 {
	status = "okay";
};

&ohci1 {
	status = "okay";
};


&ths {
	status = "okay";
	vref-supply = <&reg_aldo>;
};

&usbphy {
	usb0_vbus-supply = <&reg_usbvbus>;
	usb1_vbus-supply = <&reg_usbvbus>;
	status = "okay";
};

&mdio {

};

&emac {
	pinctrl-names = "default";
	phy-supply = <&reg_vcc_3v3>;
	status = "disabled";
};

&i2s2 {
    pinctrl-0 = <&i2s2_pins>, <&i2s2_din_pins>;
    pinctrl-names = "default";
    status = "okay";
};

